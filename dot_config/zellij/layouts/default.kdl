layout {
  pane_template name="status_bar" {
    borderless true
    plugin location="status-bar"
  }

  default_tab_template {
    pane size=1 borderless=true {
        plugin location="compact-bar"
    }
    children
    status_bar size=1
  }

  tab {
    pane split_direction="vertical" {
        pane focus=true
    }
  }
}
